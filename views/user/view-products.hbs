<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xl-3 mb-3"> <!-- Use mb-3 for margin-bottom -->
                <div class="card" style="width: 100%; height: 23rem; position: relative;"> <!-- Set width to 100% -->
                    <!-- Image -->
                    <img class="card-img-top" 
                         src="/product-images/{{this._id}}.jpg" 
                         alt="Product image" 
                         style="height: 12rem; object-fit: contain;"> <!-- Updated: object-fit: contain -->

                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column"> <!-- Use flex-column to ensure body items stack -->
                        <!-- Title -->
                        <h5 class="card-title text-truncate">{{this.Name}}</h5>
                        
                        <!-- Price -->
                        <p class="card-text text-truncate">Rs.{{this.Price}}</p>
                        
                        <!-- Description -->
                        <p class="card-text text-truncate" style="max-height: 4rem; overflow: hidden;">
                            {{this.Description}}
                        </p>

                        <!-- Button fixed at bottom -->
                        <button onclick="addToCart('{{this._id}}')" 
                                class="btn btn-primary mt-auto" 
                                style="width: 100%;">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
